<h1>Listing match_form_lineitems</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Match category</th>
      <th>Column name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @match_form_lineitems.each do |match_form_lineitem| %>
      <tr>
        <td><%= match_form_lineitem.name %></td>
        <td><%= match_form_lineitem.data_type %></td>
        <td><%= match_form_lineitem.match_category.name %></td>
        <td><%= match_form_lineitem.column_name %></td>
        <td><%= link_to 'Show', match_form_lineitem %></td>
        <td><%= link_to 'Edit', edit_match_form_lineitem_path(match_form_lineitem) %></td>
        <td><%= link_to 'Destroy', match_form_lineitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

