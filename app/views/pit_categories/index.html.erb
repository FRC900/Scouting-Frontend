<h1>Listing pit_categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Pit form</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pit_categories.each do |pit_category| %>
      <tr>
        <td><%= pit_category.name %></td>
        <td><%= pit_category.pit_form %></td>
        <td><%= link_to 'Show', pit_category %></td>
        <td><%= link_to 'Edit', edit_pit_category_path(pit_category) %></td>
        <td><%= link_to 'Destroy', pit_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pit category', new_pit_category_path %>
