<h1>Listing pit_form_data</h1>

<table>
  <thead>
    <tr>
      <th>Pit form</th>
      <th>Competition team</th>
      <th>Scouter</th>
      <th>Filename</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pit_form_data.each do |pit_form_datum| %>
      <tr>
        <td><%= pit_form_datum.pit_form.name %></td>
        <td><%= pit_form_datum.competitions_team %></td>
        <td><%= pit_form_datum.scouter.name %></td>
        <td><%= pit_form_datum.filename %></td>
        <td><%= pit_form_datum.notes %></td>
        <td><%= link_to 'Show', pit_form_datum %></td>
        <td><%= link_to 'Edit', edit_pit_form_datum_path(pit_form_datum) %></td>
        <td><%= link_to 'Destroy', pit_form_datum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

