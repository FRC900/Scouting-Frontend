<h1>Listing data_values</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @data_values.each do |data_value| %>
      <tr>
        <td><%= data_value.data %></td>
        <td><%= link_to 'Show', data_value %></td>
        <td><%= link_to 'Edit', edit_data_value_path(data_value) %></td>
        <td><%= link_to 'Destroy', data_value, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

