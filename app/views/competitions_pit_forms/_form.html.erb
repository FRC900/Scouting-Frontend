<%= form_for(@competitions_pit_form) do |f| %>
  <% if @competitions_pit_form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@competitions_pit_form.errors.count, "error") %> prohibited this competitions_pit_form from being saved:</h2>

      <ul>
      <% @competitions_pit_form.errors.full_messages.each do |message| %>
